            <!-- Navigation -->
            <div class="flex justify-between mt-8">
                <button id="prev-btn" onclick="navigate(-1)" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-lg transition-colors" style="visibility: hidden;">Pr√©c√©dent</button>
                <button id="next-btn" onclick="navigate(1)" class="bg-yellow-400 hover:bg-yellow-500 text-white font-bold py-2 px-4 rounded-lg transition-colors">Suivant</button>
